<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SMURF_Ava.Views.TestWindow"
        Title="TestWindow">
    <Grid ColumnDefinitions="Auto *" Name="templateGrid">
                
        <TextBlock Grid.Column="0" Text="BIndingTimeStamp" 
                   IsVisible="{Binding ShowTimeStamp, RelativeSource={RelativeSource AncestorType=Window}}"
                   TextWrapping="Wrap" 
                   FontSize="14"
                   FontWeight="Normal"
                   Margin="7 0 0 0" Foreground="{Binding ForeGroundColorStr}"/>  
                
        <TextBlock Grid.Column="1" Text=" || Binding Content}"
                   TextWrapping="Wrap"
                   Margin="7 0 0 0" Foreground="{Binding ForeGroundColorStr}"/>
        
        <Button Grid.Column="1" Content="Copy" HorizontalAlignment="Right" IsVisible="{Binding #templateGrid.is}"/>
                
    </Grid>
</Window>
